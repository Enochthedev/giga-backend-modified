{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./src",
    "esModuleInterop": true,
    "lib": [
      "es6",
      "DOM"
    ],
    "outDir": "./build",
    "allowJs": true,
    "checkJs": false,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "typeRoots": [
      "@types",
      "src/node_modules/@types",
      "@types/express/index.d.ts"
    ],
    "paths": {
      "common/*": [
        "../common/src/*"
      ]
    },
    "baseUrl": "."
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/node_modules",
    "dist",
    "./lib",
    "build"
  ]
}
