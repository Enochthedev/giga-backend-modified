{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "rootDir": "./",
    "esModuleInterop": true,
    "lib": [
      "es6",
      "DOM"
    ],
    "outDir": "build",
    "allowJs": true,
    "checkJs": false,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "typeRoots": [
      "@types",
      "src/node_modules/@types",
      "@types/express/index.d.ts"
    ],
    "paths": {
      "common/*": [
        "../common/src/*"
      ]
    },
    "baseUrl": "."
  },
  "exclude": [
    "src/node_modules",
    "dist",
    "./lib",
    "build"
  ]
}
