# Multi-Service Platform Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
NODE_ENV=development
COMPOSE_PROJECT_NAME=multi-service-platform

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_PASSWORD=password
POSTGRES_PORT=5432

# =============================================================================
# CACHE AND MESSAGE QUEUE
# =============================================================================
REDIS_PORT=6379
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=password
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# =============================================================================
# SEARCH ENGINE
# =============================================================================
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_TRANSPORT_PORT=9300

# =============================================================================
# SERVICE PORTS
# =============================================================================
API_GATEWAY_PORT=3000
AUTH_SERVICE_PORT=3001
ECOMMERCE_SERVICE_PORT=3002
PAYMENT_SERVICE_PORT=3003
TAXI_SERVICE_PORT=3004
HOTEL_SERVICE_PORT=3005
ADVERTISEMENT_SERVICE_PORT=3006
NOTIFICATION_SERVICE_PORT=3007
FILE_SERVICE_PORT=3008
SEARCH_SERVICE_PORT=3009
ADMIN_SERVICE_PORT=3010
ANALYTICS_SERVICE_PORT=3011
MESSAGING_SERVICE_PORT=3012
DATA_GOVERNANCE_ADMIN_PORT=3020

# =============================================================================
# MONITORING PORTS
# =============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3100
GRAFANA_PASSWORD=admin123

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# EXTERNAL SERVICES - PAYMENT
# =============================================================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =============================================================================
# EXTERNAL SERVICES - NOTIFICATIONS
# =============================================================================
SENDGRID_API_KEY=SG.your_sendgrid_api_key
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# =============================================================================
# EXTERNAL SERVICES - FILE STORAGE
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# =============================================================================
# OAUTH CONFIGURATION
# =============================================================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
APPLE_CLIENT_ID=your_apple_client_id
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id
APPLE_PRIVATE_KEY=your_apple_private_key

# =============================================================================
# DATA GOVERNANCE AND COMPLIANCE
# =============================================================================
# GDPR Compliance
GDPR_ENABLED=true

# PCI DSS Compliance
PCI_COMPLIANCE_ENABLED=true
PCI_ENCRYPTION_KEY=your-32-character-encryption-key-change-in-production

# Audit Logging
AUDIT_ENABLED=true
AUDIT_RETENTION_DAYS=2555

# Backup and Recovery
BACKUP_ENABLED=true
BACKUP_ENCRYPTION_ENABLED=true
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key-change-in-production

# Data Anonymization
ANONYMIZATION_ENABLED=true
ANONYMIZATION_SALT=your-anonymization-salt-change-in-production
ANONYMIZATION_BATCH_SIZE=1000

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Set to 'true' to enable development features
DEBUG=false
LOG_LEVEL=info

# =============================================================================
# DOCKER PROFILES
# =============================================================================
# Available profiles:
# - default: Core services (api-gateway, auth, ecommerce, payment, taxi, hotel, advertisement, notification, file)
# - full: All services including search, admin, analytics, messaging, monitoring
# - search: Adds search service and elasticsearch
# - admin: Adds admin service
# - analytics: Adds analytics service
# - messaging: Adds messaging service
# - monitoring: Adds prometheus and grafana

# To use profiles, run: docker-compose --profile full up -d
# Or set: COMPOSE_PROFILES=full,monitoring