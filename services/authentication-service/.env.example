# Authentication Service Configuration
NODE_ENV=development
PORT=8001
SERVICE_NAME=authentication-service

# Database
DATABASE_URL=postgresql://giga_user:giga_password@localhost:5432/giga_dev

# Redis
REDIS_URL=redis://localhost:6379

# Message Queue
RABBITMQ_URL=amqp://giga_user:giga_password@localhost:5672

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Security
BCRYPT_ROUNDS=12

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:8001/api/auth/oauth/google/callback

FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:8001/api/auth/oauth/facebook/callback

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:8001/api/auth/oauth/github/callback

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend URL for OAuth redirects
FRONTEND_URL=http://localhost:3000

# Application Name for MFA
APP_NAME=Giga Platform

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info