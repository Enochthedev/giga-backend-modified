        "cors": "^2.8.5",
        "helmet": "^7.0.0",
        "dotenv": "^16.3.1",
        "pg": "^8.11.3",
        "uuid": "^9.0.0",
        "passport": "^0.7.0",
        "passport-google-oauth20": "^2.0.0",
        "passport-apple": "^2.0.2",
        "passport-facebook": "^3.0.0",
        "passport-github2": "^0.1.12",
        "passport-jwt": "^4.0.1",
        "speakeasy": "^2.0.0",
        "qrcode": "^1.5.3",
        "geoip-lite": "^1.4.7",
        "ua-parser-js": "^1.0.37",
        "rate-limiter-flexible": "^3.0.8",
        "express-rate-limit": "^7.1.5",
        "express-slow-down": "^2.0.1",
        "@giga/common": "workspace:*"
