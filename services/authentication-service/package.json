        "cors": "^2.8.5",
        "helmet": "^7.1.0",
        "compression": "^1.7.4",
        "morgan": "^1.10.0",
        "dotenv": "^16.3.1",
        "pg": "^8.11.3",
        "uuid": "^9.0.1",
        "redis": "^4.6.11",
        "amqplib": "^0.10.3",
        "passport": "^0.7.0",
        "passport-google-oauth20": "^2.0.0",
        "passport-apple": "^2.0.2",
        "passport-facebook": "^3.0.0",
        "passport-github2": "^0.1.12",
        "passport-jwt": "^4.0.1",
        "speakeasy": "^2.0.0",
        "qrcode": "^1.5.3",
        "geoip-lite": "^1.4.10",
        "ua-parser-js": "^1.0.37",
        "rate-limiter-flexible": "^2.4.2",
        "express-rate-limit": "^7.1.5",
        "express-slow-down": "^2.0.1",
        "winston": "^3.11.0",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.0",
        "@giga/common": "workspace:*"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/bcryptjs": "^2.4.6",
        "@types/jsonwebtoken": "^9.0.5",
