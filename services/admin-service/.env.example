# Server Configuration
PORT=3006
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/admin_service_db
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# RabbitMQ Configuration
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_EXCHANGE=platform_events
RABBITMQ_QUEUE_PREFIX=admin_service

# Service URLs
API_GATEWAY_URL=http://localhost:3000
AUTH_SERVICE_URL=http://localhost:3001
ECOMMERCE_SERVICE_URL=http://localhost:3002
TAXI_SERVICE_URL=http://localhost:3003
HOTEL_SERVICE_URL=http://localhost:3004
PAYMENT_SERVICE_URL=http://localhost:3005

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/admin-service.log

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# Admin Configuration
SUPER_ADMIN_EMAIL=admin@platform.com
SUPER_ADMIN_PASSWORD=change-this-password
DEFAULT_ADMIN_ROLE=admin