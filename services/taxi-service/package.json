{
    "name": "@giga/taxi-service",
    "version": "1.0.0",
    "description": "Unified taxi service with driver and ride management",
    "main": "dist/app.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/app.js",
        "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "migrate": "ts-node src/database/migrate.ts migrate",
        "migrate:rollback": "ts-node src/database/migrate.ts rollback",
        "migrate:status": "ts-node src/database/migrate.ts status",
        "health": "curl -f http://localhost:${PORT:-3004}/health || exit 1"
    },
    "dependencies": {
        "express": "^4.18.2",
        "cors": "^2.8.5",
        "helmet": "^7.1.0",
        "compression": "^1.7.4",
        "morgan": "^1.10.0",
        "dotenv": "^16.3.1",
        "pg": "^8.11.3",
        "redis": "^4.6.11",
        "socket.io": "^4.7.4",
        "amqplib": "^0.10.3",
        "bcryptjs": "^2.4.3",
        "jsonwebtoken": "^9.0.2",
        "joi": "^17.11.0",
        "zod": "^3.22.4",
        "uuid": "^9.0.1",
        "express-rate-limit": "^7.1.5",
        "http-status": "^1.7.3",
        "axios": "^1.6.2",
        "winston": "^3.11.0",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.0",
        "@giga/common": "workspace:*"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/cors": "^2.8.17",
        "@types/compression": "^1.7.5",
        "@types/morgan": "^1.9.9",
        "@types/bcryptjs": "^2.4.6",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/winston": "^2.4.4",
        "@types/node": "^20.10.0",
        "@types/jest": "^29.5.8",
        "@types/pg": "^8.10.9",
        "@types/socket.io": "^3.0.2",
        "@types/amqplib": "^0.10.4",
        "@types/uuid": "^9.0.7",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.8",
        "@types/supertest": "^2.0.16",
        "typescript": "^5.3.2",
        "ts-node-dev": "^2.0.0",
        "ts-node": "^10.9.1",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.1",
        "supertest": "^6.3.3",
        "eslint": "^8.54.0",
        "@typescript-eslint/eslint-plugin": "^6.12.0",
        "@typescript-eslint/parser": "^6.12.0"
    },
    "keywords": [
        "taxi",
        "ride-sharing",
        "microservice",
        "typescript",
        "postgresql",
        "websocket",
        "rabbitmq",
        "fuel-pricing"
    ],
    "author": "Development Team",
    "license": "MIT"
}