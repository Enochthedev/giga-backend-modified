# Server Configuration
PORT=3005
NODE_ENV=development

# Database Configuration
MONGODB_URL=mongodb://localhost:27017/taxi_service

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# RabbitMQ Configuration
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# External APIs
TOMTOM_API_KEY=your-tomtom-api-key-here
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here
MAPBOX_API_KEY=your-mapbox-api-key-here

# Weather API (for dynamic pricing)
WEATHER_API_KEY=your-weather-api-key-here
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# WebSocket Configuration
WEBSOCKET_PORT=3006
WEBSOCKET_CORS_ORIGIN=http://localhost:3000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/taxi-service.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Ride Configuration
DEFAULT_SEARCH_RADIUS_KM=10
MAX_DRIVERS_PER_REQUEST=5
RIDE_TIMEOUT_MINUTES=15
DRIVER_LOCATION_UPDATE_INTERVAL_SECONDS=30