{
    "name": "@giga/notification-service",
    "version": "1.0.0",
    "description": "Multi-channel notification service",
    "main": "dist/app.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/app.js",
        "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
        "migrate": "ts-node src/database/migrate-runner.ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix"
    },
    "dependencies": {
        "express": "^4.18.2",
        "@sendgrid/mail": "^7.7.0",
        "twilio": "^4.14.0",
        "firebase-admin": "^11.10.1",
        "joi": "^17.9.2",
        "cors": "^2.8.5",
        "helmet": "^7.0.0",
        "dotenv": "^16.3.1",
        "pg": "^8.11.3"
    },
    "devDependencies": {
        "@types/express": "^4.17.17",
        "@types/node": "^20.4.5",
        "@types/pg": "^8.10.2",
        "typescript": "^5.1.6",
        "ts-node-dev": "^2.0.0",
        "jest": "^29.6.2",
        "@types/jest": "^29.5.3",
        "ts-jest": "^29.1.1",
        "eslint": "^8.45.0",
        "@typescript-eslint/eslint-plugin": "^6.2.1",
        "@typescript-eslint/parser": "^6.2.1"
    }
}