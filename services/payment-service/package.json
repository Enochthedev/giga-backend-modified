{
    "name": "@giga/payment-service",
    "version": "1.0.0",
    "description": "Payment processing service with multiple gateway support",
    "main": "dist/app.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/app.js",
        "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "migrate": "ts-node src/database/migrate.ts migrate",
        "migrate:rollback": "ts-node src/database/migrate.ts rollback",
        "migrate:status": "ts-node src/database/migrate.ts status"
    },
    "dependencies": {
        "express": "^4.18.2",
        "stripe": "^13.10.0",
        "joi": "^17.9.2",
        "zod": "^3.22.2",
        "cors": "^2.8.5",
        "helmet": "^7.0.0",
        "dotenv": "^16.3.1",
        "pg": "^8.11.3",
        "uuid": "^9.0.0",
        "winston": "^3.10.0",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^4.6.3",
        "@giga/common": "workspace:*"
    },
    "devDependencies": {
        "@types/express": "^4.17.17",
        "@types/node": "^20.4.5",
        "@types/pg": "^8.10.2",
        "@types/uuid": "^9.0.2",
        "@types/cors": "^2.8.13",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.8",
        "@types/supertest": "^2.0.12",
        "supertest": "^6.3.3",
        "typescript": "^5.1.6",
        "ts-node-dev": "^2.0.0",
        "jest": "^29.6.2",
        "@types/jest": "^29.5.3",
        "ts-jest": "^29.1.1",
        "eslint": "^8.45.0",
        "@typescript-eslint/eslint-plugin": "^6.2.1",
        "@typescript-eslint/parser": "^6.2.1"
    }
}