{
    "name": "@giga/tests",
    "version": "1.0.0",
    "description": "Comprehensive test suite for Giga multi-service platform",
    "private": true,
    "scripts": {
        "test": "jest",
        "test:unit": "jest --testPathPattern=unit",
        "test:integration": "jest --testPathPattern=integration",
        "test:contract": "jest --testPathPattern=contract",
        "test:e2e": "jest --testPathPattern=e2e",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:ci": "jest --ci --coverage --watchAll=false",
        "test:performance": "k6 run performance/load-test.js",
        "test:stress": "k6 run performance/stress-test.js",
        "test:all": "npm run test:unit && npm run test:integration && npm run test:contract && npm run test:e2e",
        "pact:publish": "pact-broker publish pacts --consumer-app-version=$npm_package_version --broker-base-url=$PACT_BROKER_BASE_URL",
        "pact:verify": "pact-broker can-i-deploy --pacticipant=PaymentService --version=$npm_package_version --to=production",
        "lint": "eslint . --ext .ts,.js",
        "lint:fix": "eslint . --ext .ts,.js --fix"
    },
    "dependencies": {
        "@pact-foundation/pact": "^12.1.0",
        "axios": "^1.5.0",
        "supertest": "^6.3.3",
        "pg": "^8.11.3",
        "ioredis": "^5.3.2",
        "bcryptjs": "^2.4.3",
        "jsonwebtoken": "^9.0.2"
    },
    "devDependencies": {
        "@types/jest": "^29.5.5",
        "@types/supertest": "^2.0.12",
        "@types/pg": "^8.10.2",
        "@types/bcryptjs": "^2.4.2",
        "@types/jsonwebtoken": "^9.0.2",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.1",
        "typescript": "^5.2.2",
        "eslint": "^8.49.0",
        "@typescript-eslint/eslint-plugin": "^6.7.0",
        "@typescript-eslint/parser": "^6.7.0"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "setupFilesAfterEnv": [
            "<rootDir>/setup.ts"
        ],
        "testMatch": [
            "**/__tests__/**/*.ts",
            "**/?(*.)+(spec|test).ts"
        ],
        "collectCoverageFrom": [
            "../services/**/*.ts",
            "../packages/**/*.ts",
            "!**/*.d.ts",
            "!**/node_modules/**",
            "!**/dist/**"
        ],
        "coverageDirectory": "coverage",
        "coverageReporters": [
            "text",
            "lcov",
            "html"
        ],
        "testTimeout": 30000
    }
}