{
  "name": "giga-multi-service-platform",
  "version": "1.0.0",
  "description": "Multi-service platform with ecommerce, taxi, hotel, payment, and advertisement services",
  "private": true,
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:common": "npm run build --workspace=@giga/common",
    "build:services": "npm run build --workspace=@giga/authentication-service --workspace=@giga/api-gateway --workspace=@giga/payment-service --workspace=@giga/notification-service --workspace=@giga/search-service --workspace=@giga/file-service --workspace=@giga/analytics-service --workspace=@giga/ecommerce-service --workspace=@giga/hotel-service --workspace=@giga/advertisement-service --workspace=@giga/taxi-service",
    "dev": "concurrently \"npm run dev --workspace=@giga/common\" \"npm run dev --workspaces --if-present\"",
    "dev:gateway": "npm run dev --workspace=@giga/api-gateway",
    "dev:auth": "npm run dev --workspace=@giga/authentication-service",
    "dev:payment": "npm run dev --workspace=@giga/payment-service",
    "dev:notification": "npm run dev --workspace=@giga/notification-service",
    "dev:search": "npm run dev --workspace=@giga/search-service",
    "dev:file": "npm run dev --workspace=@giga/file-service",
    "dev:analytics": "npm run dev --workspace=@giga/analytics-service",
    "dev:ecommerce": "npm run dev --workspace=@giga/ecommerce-service",
    "dev:hotel": "npm run dev --workspace=@giga/hotel-service",
    "dev:advertisement": "npm run dev --workspace=@giga/advertisement-service",
    "test": "npm run test --workspaces --if-present",
    "test:unit": "npm run test --workspaces --if-present",
    "test:integration": "npm run test:integration --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "setup": "npm install && npm run build:common",
    "start:all": "concurrently \"npm run start --workspace=@giga/api-gateway\" \"npm run start --workspace=@giga/authentication-service\" \"npm run start --workspace=@giga/payment-service\" \"npm run start --workspace=@giga/notification-service\" \"npm run start --workspace=@giga/search-service\" \"npm run start --workspace=@giga/file-service\" \"npm run start --workspace=@giga/analytics-service\" \"npm run start --workspace=@giga/ecommerce-service\" \"npm run start --workspace=@giga/hotel-service\" \"npm run start --workspace=@giga/advertisement-service\" \"npm run start --workspace=@giga/taxi-service\"",
    "consolidated:start": "./start-consolidated-platform.sh",
    "start:platform": "./start-essential-platform.sh",
    "docker:essential": "docker-compose -f docker-compose.essential.yml up --build",
    "docker:essential:down": "docker-compose -f docker-compose.essential.yml down",
    "docker:legacy": "docker-compose -f docker-compose.legacy.yml up --build",
    "docker:legacy:down": "docker-compose -f docker-compose.legacy.yml down",
    "logs:essential": "docker-compose -f docker-compose.essential.yml logs -f",
    "logs:dev": "docker-compose -f docker-compose.dev.yml logs -f",
    "migrate:legacy": "ts-node scripts/migrate-legacy-data.ts",
    "consolidate:services": "ts-node scripts/consolidate-legacy-services.ts",
    "health:check": "./scripts/health-check.sh",
    "docs:verify": "./scripts/verify-docs.sh",
    "setup:env": "cp .env.example .env",
    "validate:all": "npm run lint && npm run test && npm run docs:verify"
  },
  "devDependencies": {
    "@types/http-status": "^0.2.30",
    "@types/jest": "^29.5.2",
    "@types/mongoose": "^5.11.96",
    "@types/pg": "^8.10.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "jest": "^29.6.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "mongodb": "^5.7.0",
    "pg": "^8.11.1",
    "bcryptjs": "^2.4.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "microservices",
    "ecommerce",
    "taxi",
    "hotel",
    "payment",
    "advertisement",
    "nodejs",
    "typescript",
    "docker"
  ],
  "author": "Giga Platform Team",
  "license": "MIT"
}