{
  "compilerOptions": {
    "outDir": "build",
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "common/*": [
        "../common/src/*"
      ],
      "common": [
        "../common/src"
      ]
    }
  },
  "include": [
    "src/**/*",
    "../common/src/**/*"
  ]
}
