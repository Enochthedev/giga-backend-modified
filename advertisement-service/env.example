# ========================================
# ADVERTISEMENT SERVICE - ENVIRONMENT VARIABLES
# ========================================

# ========================================
# SERVER CONFIGURATION
# ========================================
PORT=4003
NODE_ENV=development
API_BASE_URL=http://localhost:4003

# ========================================
# DATABASE CONFIGURATION
# ========================================
DATABASE_URL=postgresql://username:password@localhost:5432/advertisement_db

# ========================================
# SERVICE CONFIGURATION
# ========================================
SERVICE_NAME=advertisement-service
SERVICE_VERSION=2.0.0

# ========================================
# AUTHENTICATION & SECURITY
# ========================================
JWT_SECRET=your-super-secret-jwt-key-here

# ========================================
# EXTERNAL SERVICES
# ========================================
PAYMENT_SERVICE_URL=http://localhost:4001
ANALYTICS_SERVICE_URL=http://localhost:4005
NOTIFICATION_SERVICE_URL=http://localhost:4006

# ========================================
# CORS CONFIGURATION
# ========================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# FILE UPLOAD CONFIGURATION
# ========================================
MAX_FILE_SIZE=10485760

# ========================================
# CACHING CONFIGURATION
# ========================================
REDIS_URL=redis://localhost:6379

# ========================================
# LOGGING CONFIGURATION
# ========================================
LOG_LEVEL=info
LOG_FILE=logs/ads.log
